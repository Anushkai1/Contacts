<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navBtn">
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text3</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="btnback">
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="h1">
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="input_label">
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text4</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/RootMargin</item>
        <item name="android:textSize">12sp</item>
        <item name="android:linksClickable">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="edit_text">
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginTop">-12dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/text3</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/input_bg</item>
    </style>

</resources>