<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/bg2"
         >

            <ImageView
                android:id="@+id/contactImage"
                style="@style/contact_image"
                android:layout_marginStart="@dimen/RootMargin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/a" />

            <TextView
                android:id="@+id/contact_name"
                style="@style/contact_name"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="120dp"
                android:text="Mahesh Chathuranga"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/contactImage"
                app:layout_constraintTop_toTopOf="@+id/contactImage" />

            <TextView
                style="@style/contact_phone"
                android:id="@+id/contact_phone"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="120dp"
                android:text="+94 78 78 12 456"
                app:layout_constraintBottom_toBottomOf="@+id/contactImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/contact_name" />
            <TextView
                style="@style/contact_phone"
                android:id="@+id/contact_email"
                android:layout_marginStart="72dp"
                android:layout_marginEnd="200dp"
                android:layout_marginBottom="60dp"
                android:text="+94 78 78 12 456"
                app:layout_constraintBottom_toBottomOf="@+id/contactImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/contact_name" />

            <TextView
                style="@style/contact_phone"
                android:id="@+id/contact_id"
                android:layout_marginStart="200dp"
                android:layout_marginEnd="00dp"
                android:layout_marginBottom="60dp"
                android:text="+94 78 78 12 456"
                app:layout_constraintBottom_toBottomOf="@+id/contactImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/contact_name" />
            <TextView
                style="@style/contact_phone"
                android:id="@+id/contact_isFavorite"
                android:layout_marginStart="0dp"
                android:layout_width="30dp"
                android:layout_marginEnd="00dp"
                android:layout_marginBottom="60dp"
                android:text="+1"
                app:layout_constraintBottom_toBottomOf="@+id/contactImage"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/messageico"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/RootMargin"
                app:layout_constraintBottom_toBottomOf="@+id/contactImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/contactImage"
                app:srcCompat="@drawable/message2" />

            <ImageView
                android:id="@+id/callico"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="72dp"
                app:layout_constraintBottom_toBottomOf="@+id/contactImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/contactImage"
                app:srcCompat="@drawable/call2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>